            <div class="pt-8 flex flex-col items-center pb-10">
				<img class="w-24 h-24 mb-3 rounded-full shadow-lg" src="{{{user.picture}}}" alt="{{user.name}}"/>
				<h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white">{{user.name}}</h5>
			</div>
			
			
